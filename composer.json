{
	"require": {
		"webonyx/graphql-php": "^0.13.8",
		"overblog/dataloader-php": "^0.5.2"
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "^1.0.0",
		"jakub-onderka/php-console-highlighter": "^0.3.2",
		"mediawiki/minus-x": "^0.3.2",
		"mediawiki/mediawiki-codesniffer": "28.0.0"
	},
	"scripts": {
		"fix": [
			"phpcbf",
			"minus-x fix ."
		],
